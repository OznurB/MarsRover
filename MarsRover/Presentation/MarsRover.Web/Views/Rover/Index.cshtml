@model MarsRover.Application.Contract.Models.Plateau

<form asp-action="Index" asp-controller="Rover" asp-antiforgery="true" class="form-horizontal">
    <h3>Plateau Information</h3>
    <div class="form-group">
        <label asp-for="PlateauSize.Width" class="control-label col-sm-2"></label>
        <div class="col-sm-3">
            <input asp-for="PlateauSize.Width" class="form-control" min="1" max="100" required />
            <span asp-validation-for="PlateauSize.Width"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PlateauSize.Height" class="control-label col-sm-2"></label>
        <div class="col-sm-3">
            <input asp-for="PlateauSize.Height" class="form-control" min="1" max="100" required />
            <span asp-validation-for="PlateauSize.Height"></span>
        </div>
    </div>
    <div class="clearfix"></div>
    <h3>
        Rover Information
    </h3>

    <div id="dvRoverList">
        <table id="tblRovers" class="table table-bordered table-responsive table-hover" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th style="width:150px">X Position</th>
                    <th style="width:150px">Y Position</th>
                    <th style="width:150px">Orientation</th>
                    <th style="width:150px">Instructions</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @*@if (Model != null && Model.RoverList != null)
                {
                    foreach (var rover in Model.RoverList)
                    {
                        <tr>
                            <td>@rover.RoverPosition.X</td>
                            <td>@rover.RoverPosition.Y</td>
                            <td>@rover.RoverPosition.Orientation</td>
                            <td>@rover.Instructions</td>
                        </tr>
                    }
                }*@
            </tbody>
            <tfoot>
                <tr>
                    <td><input type="text" id="txtXPosition" min="1" max="100" /></td>
                    <td><input type="text" id="txtYPosition" min="1" max="100" /></td>
                    <td>
                        <select id="selectOrientation" class="form-control">
                            <option value="North">North</option>
                            <option value="East">East</option>
                            <option value="South">South</option>
                            <option value="West">West</option>
                        </select>
                    </td>
                    <td><input type="text" id="txtInstructions" /></td>
                    <td><input type="button" id="btnAdd" value="Add" /></td>
                </tr>
            </tfoot>
        </table>
    </div>
    <br />
    <input type="submit" value="Submit" class="btn btn-primary" />
</form>


@if (ViewData.ModelState.ErrorCount == 0 && Model != null && Model.RoverList != null && Model.RoverList.Count > 0)
{
    <h3>Results</h3>

    <table class="table table-bordered table-responsive table-hover">
        <thead>
            <tr>
                <th>Rover Id</th>
                <th>First Position</th>
                <th>Last Position</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RoverList)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.FirstRoverPosition.ToString()</td>
                    <td>@item.RoverPosition.ToString()</td>
                </tr>
            }
        </tbody>
    </table>
}

